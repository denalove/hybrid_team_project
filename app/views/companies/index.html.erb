<link rel="stylesheet" type="text/css" href="../../assets/stylesheets/reset.css">
<link rel="stylesheet" type="text/css" href="../../assets/stylesheets/gallery.css">

<p id="notice"><%= notice %></p>
<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
        <tr>
      <div class="image-zoom-container">
          <div class="zoom-container">
  		        <a href="#">
  			<span class="zoom-caption">
  				<div><%= image_tag member.photo.url(:thumb) %></div>
  			</span>
        </a>
  	     </div>
        <td></td>
        <td><%= member.name %></td>
        <td><%= member.title %></td>
        <td><%= member.email %></td>
        <td><%= member.company.name if member.company %></td>

        <td><%= link_to 'Select', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
